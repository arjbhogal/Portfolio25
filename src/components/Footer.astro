      <!-- Right section with navigation links in a two-column grid -->
      <div class="grid grid-cols-2 gap-x-12 gap-y-4">
        <a href="/" class="text-lg font-medium hover:text-zinc-300 transition-colors">Home</a>
        <a href="/cv" class="text-lg font-medium hover:text-zinc-300 transition-colors">CV</a>
        
        <a href="/work" class="text-lg font-medium hover:text-zinc-300 transition-colors">Work</a>
